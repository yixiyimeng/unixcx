.location {
	width: 300rpx;
	height: 80rpx;
	line-height: 80rpx;
	margin-top: 40rpx;
	font-size: 28rpx;
	color: #fff;
	float: left;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 9999999;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.location image {
	width: 25rpx;
	height: 33rpx;
	margin: 24rpx 10rpx 23rpx 30rpx;
	float: left;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.openDjs {
	width: 102rpx;
	height: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display: inline-block;
	clear: both;
	margin-left: 5rpx;
	overflow: visible;
	position: relative;
}
.openDjs image {
	width: 102rpx;
	height: 48rpx;
	position: absolute;
	left: 0;
	top: -12rpx;
}

