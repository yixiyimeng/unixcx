
.section {
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	width: 100%;
	border-bottom: 1px solid #e5e5e5;
	padding: 30rpx 0;
	overflow: hidden;
	position: relative;
}
.leftImg {
	width: 150rpx;
	height: 150rpx;
	overflow: hidden;
	float: left;
	background-color: #e7e7e7;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
	position: relative;
}
.leftImg image {
	width: 150rpx;
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.rightInfo {
	width: 520rpx;
	float: right;
	height: 150rpx;
	overflow: visible;
}
.title {
	font-size: 28rpx;
	height: 50rpx;
	line-height: 50rpx;
	color: #000;
}
.details {
	font-size: 24rpx;
	height: 40rpx;
	line-height: 40rpx;
	color: #333;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
}
.tel,
.address {
	height: 30rpx;
	line-height: 30rpx;
	font-size: 22rpx;
	color: #999;
	width: 100%;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
}
.address {
	clear: both;
}
.tel image,
.address image {
	width: 18rpx;
	height: 25rpx;
	float: left;
	margin: 2rpx 15rpx 5rpx 0;
}
.stars{
  width:150rpx;
  height: 22rpx;
  position: absolute;
  top:40rpx;
  right: 30rpx;
  text-align: right;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  overflow: hidden;
}
