
page {
	height: 100%;
	overflow: hidden;
	position: relative;
}
.location {
	font-size: 28rpx;
	color: #fff;
	min-width: 300rpx;
	display: block;
}
.location image {
	width: 25rpx;
	height: 33rpx;
	margin: 28rpx 10rpx 0 30rpx;
	float: left;
}
.searchBox image,
.noReadMsg image {
	width: 40rpx;
	height: 40rpx;
	margin: 20rpx 10rpx 20rpx 0;
	vertical-align: middle;
}
.noReadMsg {
	-webkit-animation: msgShow 1.5s infinite;
	        animation: msgShow 1.5s infinite;
}
.noReadMsg image {
	width: 40rpx;
	height: 40rpx;
	margin: 0 30rpx;
}
@-webkit-keyframes msgShow {
0% {
		opacity: 1;
}
50% {
		opacity: 0;
}
100% {
		opacity: 1;
}
}
@keyframes msgShow {
0% {
		opacity: 1;
}
50% {
		opacity: 0;
}
100% {
		opacity: 1;
}
}
.searchWrap {
	background: #789eeb;
	padding: 10rpx 30rpx;
	position: fixed;
	left: 0;
	top: 25px;
	top: 25px;
	right: 0;
	z-index: 99;
}
.searchBox {
	width: 690rpx;
	overflow: hidden;
	height: 80rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 0 30rpx;
	font-size: 28rpx;
	line-height: 80rpx;
	background-color: #fff;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
	color: #a8a8a8;
	display: block;
}
.wrap {
	position: absolute;
	left: 0;
	right: 0;
}
.swiper {
	height: 360rpx;
	width: 690rpx;
	margin: 30rpx 30rpx 0;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
	overflow: hidden;
}
.swiper image {
	width: 100%;
	height: 100%;
	display: block;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
}
.menu {
	overflow: hidden;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.menu .menu-item {
	width: 100rpx;
	/* float:left; */
	height: 140rpx;
	font-size: 30rpx;
	color: #666;
	text-align: center;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin-right: 47.5rpx;
}
.menu .menu-item:nth-child(5n) {
	margin-right: 0;
}
.menu .menu_img {
	width: 90rpx;
	height: 90rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin: 0 auto;
}
.menu_img image {
	width: 100%;
	height: 90rpx;
}
.menu-tit {
	height: 40rpx;
	line-height: 52rpx;
	width: 100%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 24rpx;
}
.today_info {
	width: 690rpx;
	height: 150rpx;
	margin: 0 30rpx;
	-webkit-box-shadow: 5rpx 10rpx 30rpx #ecf2fe, 10rpx -5rpx 1rpx #f1f5fe, -10rpx 5rpx 5rpx #f1f5fe, -5rpx -1rpx 5rpx #f7f9fe;
	        box-shadow: 5rpx 10rpx 30rpx #ecf2fe, 10rpx -5rpx 1rpx #f1f5fe, -10rpx 5rpx 5rpx #f1f5fe, -5rpx -1rpx 5rpx #f7f9fe;
	-webkit-border-radius: 5rpx;
	        border-radius: 5rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 15rpx 30rpx;
}
.date {
	width: 110rpx;
	height: 120rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	position: relative;
	float: left;
}
.date image {
	width: 100%;
	height: 120rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.date .d,
.date .m {
	position: absolute;
}
.date .d {
	font-size: 40rpx;
	color: #fff;
	top: 35rpx;
	left: 0;
	text-align: center;
	width: 100%;
	font-weight: bold;
}
.date .m {
	font-size: 24rpx;
	color: #fff;
	top: 80rpx;
	left: 0;
	text-align: center;
	width: 100%;
}
.today_info .info {
	float: right;
	width: 520rpx;
	height: 110rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding-left: 30rpx;
	overflow: hidden;
}
.today_info .info .tit {
	font-size: 24rpx;
	color: #000;
	font-weight: bold;
	width: 30%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	float: left;
	height: 45rpx;
	line-height: 45rpx;
}
.today_info .info .lc {
	width: 70%;
	float: right;
	font-size: 24rpx;
	height: 45rpx;
	line-height: 45rpx;
}
.good,
.bad {
	font-size: 24rpx;
	color: #000;
	width: 100%;
	line-height: 35rpx;
	height: 35rpx;
	overflow: hidden;
}
.good view,
.bad view {
	color: #58a83f;
	display: inline-block;
	padding-right: 10rpx;
	font-size: 24rpx;
}
.bad view {
	color: #ff6868;
}
.newsBox {
	width: 100%;
	padding: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	overflow: hidden;
}
.newsBox .left_img {
	width: 160rpx;
	height: 120rpx;
	overflow: hidden;
	float: left;
	background: #e5e5e5;
}
.newsBox .left_img image {
	width: 160rpx;
	height: 120rpx;
}
.newsBox .newsRightInfo {
	width: 530rpx;
	padding-left: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	float: right;
}
.newsBox .news-title {
	font-size: 24rpx;
	color: #000;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
	height: 72rpx;
	line-height: 36rpx;
}
.newsBox .news-time {
	height: 36rpx;
	line-height: 36rpx;
	font-size: 24rpx;
	color: #789eeb;
	margin-top: 10rpx;
}
.uni-swiper-msg {
	background: #fffbef;
	padding: 0 30rpx;
	font-size: 24rpx;
	color: #7f7f7f;
	height: 60rpx;
}
.uni-swiper-msg .uni-swiper-msg-icon {
	margin-top: 10rpx;
}
.uni-swiper-msg .section {
	line-height: 60rpx;
}
.list {
	padding: 0 30rpx;
}

